{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": false,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./*"]
		},
		"incremental": true
	},
	"include": [
		"next-env.d.ts",
		"svg.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"store/slices/menu.slices.ts"
	],
	"exclude": ["node_modules"]
}